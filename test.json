{
    "description": "Some simple tests to make sure the Jcase schema is written correctly",
    "assertions": [
        {
            "description": "An empty JSON object is invalid.",
            "input": {},
            "output": false
        },
        {
            "description": "A minimal Jcase instance is valid.",
            "input": {
                "assertions": [
                    {
                        "input": 1,
                        "output": 1
                    }
                ]
            },
            "output": true
        },
        {
            "description": "A fully featured Jcase instance is valid.",
            "input": {
                "description": "foo",
                "data": 0,
                "assertions": [
                    {
                        "description": "bar",
                        "input": 1,
                        "output": 1
                    },
                    {
                        "description": "baz",
                        "input": 2,
                        "output": 2
                    }
                ]
            },
            "output": true
        }
    ]
}
